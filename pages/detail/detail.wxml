<!--pages/detail/detail.wxml-->
<view class='detail'>
  <view class='header'>
    <view class='article-title'>{{newsTitle}}</view>
    <view class='news-date'>{{newDate}}</view>
    <view class='news-source'>{{newSource}}</view>
  </view>
  <view class='content'>
    <view class='contentTip' wx:for='{{newsContent}}' wx:key="id" wx:for-index="i">
        <rich-text nodes="{{item.nodes}}" ></rich-text>
    </view>
  </view>
</view>